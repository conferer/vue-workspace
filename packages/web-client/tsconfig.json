{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client", "element-plus/global", "@intlify/vite-plugin-vue-i18n/client"],
    "paths": {
      "@/*": ["./src/*"],
      "/src": ["./src/*"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
