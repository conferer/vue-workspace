{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "composite": true,
    "types": ["vite/client", "@intlify/vite-plugin-vue-i18n/client"],
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    }
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/src/**/*.tsx",
    "packages/**/src/**/*.vue",
    "packages/**/vite.config.ts"
  ]
}
