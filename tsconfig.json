{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "composite": true,
    "types": [
      "vite/client",
      "@intlify/vite-plugin-vue-i18n/client",
      "element-plus/global"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "/src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "api",
    "utils",
    "components"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "packages/**/dist",
    "packages/**/node_modules"
  ]
}
